{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Europe/London",
  "extends": [
    "config:recommended"
  ],
  "npm": {
    "rangeStrategy": "bump",
    "minimumReleaseAge": "3 days"
  },
  "updateNotScheduled": false,
  "labels": [
    "‚¨ÜÔ∏è Dependencies"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/example*/**",
    "**/__fixtures__/**"
  ],
  "vulnerabilityAlerts": {
    "branchTopic": "{{{depNameSanitized}}}-{{{newMajor}}}{{#if separateMinorPatch}}{{#if isPatch}}.{{{newMinor}}}{{/if}}{{/if}}.x{{#if isLockfileUpdate}}-lockfile{{/if}}/{{packageFile}}",
    "reviewersFromCodeOwners": true,
    "enabled": false,
    "separateMajorMinor": true,
    "separateMinorPatch": true,
    "separateMultipleMajor": true,
    "separateMultipleMinor": true,
    "minimumReleaseAge": "",
    "labels": [
      "üîí Security",
      "Severity:{{#if (equals vulnerabilitySeverity '')}}UNKNOWN{{else}}{{vulnerabilitySeverity}}{{/if}}"
    ],
    "schedule": []
  },
  "prConcurrentLimit": 7,
  "osvVulnerabilityAlerts": true
}
